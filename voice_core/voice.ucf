NET "EN_ESP"       LOC = "A4"  | IOSTANDARD = LVCMOS33;
NET "EN_PROG_ESP"  LOC = "F3"  | IOSTANDARD = LVCMOS33;

NET "ESP_TX"       LOC = "L5"  | IOSTANDARD = LVCMOS33;
NET "ESP_RX"       LOC = "K5"  | IOSTANDARD = LVCMOS33;
NET "PI_TX"        LOC = "A12" | IOSTANDARD = LVCMOS33;
